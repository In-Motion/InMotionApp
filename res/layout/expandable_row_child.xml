<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="?android:attr/listPreferredItemHeight"
    android:gravity="center_vertical"
    android:background="@color/White"       
    >

    <!--Title-->

    <TextView
        android:id="@+id/child_header"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/data_indicator"
        android:gravity="center_vertical"
        android:paddingLeft="8dip"
        android:text="" />

    <!--Right Icon-->

    <TextView
        android:id="@+id/data_indicator"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/child_header"
        android:layout_alignBottom="@+id/child_header"
        android:layout_alignParentRight="true"
        android:background="@color/Black2"
        android:padding="10dp"
        android:paddingLeft="8dip"
        android:textAlignment="center"
        android:textColor="@color/White_f0" />

</RelativeLayout>