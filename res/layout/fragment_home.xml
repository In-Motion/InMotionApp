<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:orientation="vertical" >

	<LinearLayout
	    android:layout_width="wrap_content"
	    android:layout_height="250dp"
	    android:layout_margin="10dp"
	    android:layout_alignParentLeft="true"
	    android:layout_alignParentTop="true"
	    android:orientation="vertical" >

		<ImageView
		    android:id="@+id/img_auto"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:src="@drawable/auto_abstract" />

	</LinearLayout>

	<TextView
	    android:id="@+id/in_motion_motto"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
   	    android:layout_alignParentBottom="true"
	    android:layout_centerHorizontal="true"
	    android:text="The Wheel Of Change"
	    android:layout_marginBottom="20dp"
	    android:textAppearance="?android:attr/textAppearanceMedium" />

	<TextView
	    android:id="@+id/in_motion_name"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_above="@+id/in_motion_motto"
	    android:layout_centerHorizontal="true"
	    android:layout_margin="5dp"
	    android:text="@string/in_motion"
	    android:textAppearance="?android:attr/textAppearanceLarge"
	    android:textSize="32sp" />

</RelativeLayout>